{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  },
  "include": ["src"]
}